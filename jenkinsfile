pipeline {
    agent any

    environment {
        AWS_REGION = "ap-south-1"
        AWS_CREDENTIALS = credentials('aws-credentials')  // Ensure you add AWS credentials in Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/DikshanshuC/packer-ami-pipeline.git'
            }
        }

        stage('Validate Packer Configuration') {
            steps {
                sh 'packer validate packer.hcl'
            }
        }

        stage('Build AMI with Packer') {
            steps {
                sh '''
                packer init .
                packer build -var "aws_region=${AWS_REGION}" packer.hcl
                '''
            }
        }

        stage('Notify') {
            steps {
                echo "AMI build completed successfully!"
            }
        }
    }
}
